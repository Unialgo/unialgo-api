<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1746669885033-1" author="wences">
        <createTable tableName="list">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_list"/>
            </column>
            <column name="teacher_id" type="BIGINT"/>
            <column name="title" type="VARCHAR(255)"/>
            <column name="description" type="VARCHAR(255)"/>
            <column name="start_date" type="DATETIME"/>
            <column name="end_date" type="DATETIME"/>
            <column name="creation_date" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="1746669885033-2" author="wences">
        <addForeignKeyConstraint baseColumnNames="teacher_id" baseTableName="list" constraintName="FK_LIST_ON_TEACHER"
                                 referencedColumnNames="id" referencedTableName="teacher"/>
    </changeSet>

</databaseChangeLog>